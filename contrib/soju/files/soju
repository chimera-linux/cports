# soju system service

type       = process
command    = /usr/bin/capsh --caps="cap_setgid,cap_setuid+ep cap_net_bind_service+eip" --user=_soju --addamb="cap_net_bind_service" --keep=1 -- -c "exec /usr/bin/soju -config /etc/soju/config"
depends-on = network.target
depends-on = pre-local.target
logfile    = /var/log/soju.log
