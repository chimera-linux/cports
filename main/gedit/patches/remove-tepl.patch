+		                  container);
+
+		g_signal_connect (priv->sourceview,
+		                  "notify::show-right-margin",
+		                  G_CALLBACK (on_view_right_margin_visibility_changed),
+		                  container);
+
+		g_signal_connect (priv->view_context,
+		                  "changed",
+		                  G_CALLBACK (on_view_context_changed),
