+static void
+gedit_metadata_manager_arm_timeout (GeditMetadataManager *self)
+{
+	if (self->timeout_id == 0)
+	{
+		self->timeout_id =
+			g_timeout_add_seconds_full (G_PRIORITY_DEFAULT_IDLE,
+						    2,
+						    (GSourceFunc)gedit_metadata_manager_save,
+						    self,
+						    NULL);
+	}
